{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "make",
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": ["$gcc"],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "make debug",
			"type": "shell",
			"command": "make",
			"args": ["debug"],
			"group": "build",
			"problemMatcher": ["$gcc"]
		},
		{
			"label": "make clean",
			"type": "shell",
			"command": "make",
			"args": ["clean"],
			"group": "build"
		}
	]
}
